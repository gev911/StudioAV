@model StudioAV.WebUI.Areas.Admin.Models.ProductTypeListViewModel

@{
    ViewBag.Title = "ProductTypes";
}

<h2>ProductTypes</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Product Types</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">Order</th>
                <th class="text-center">Name</th>
                <th class="text-center">Descitpion</th>
                <th class="text-center">Category</th>

            </tr>
            @foreach (var item in Model.ProductTypes)
            {
                <tr>
                    <td class="text-center">@item.Order</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.ProductTypeId })</td>
                    <td class="text-center">@item.Description</td>
                    <td class="text-center">@item.Category</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "ProductType"))
                        {
                            @Html.Hidden("productTypeId", item.ProductTypeId)
                            <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add new Product Type", "Create","ProductType", null, new { @class = "btn btn-default" })
    </div>
</div>