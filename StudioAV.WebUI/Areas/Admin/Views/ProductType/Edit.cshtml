@model StudioAV.WebUI.Areas.Admin.Models.ProductTypeViewModel

@{
    ViewBag.Title = "ProductType";
}

<div class="panel panel-default">

    <div class="panel-heading">
        @if (Model.Name != null)
        {
            <h3>Edit @Model.Name</h3>
        }
        else
        {
            <h3>Create new Product type</h3>
        }
    </div>

    @using (Html.BeginForm("Edit", "ProductType", FormMethod.Post))
    {
        <div class="panel-body">
            @*@Html.HiddenFor(m => m.ProductId)*@
            <div class="form-group">
                <label>Id</label>
                @Html.TextBoxFor(m => m.ProductTypeId, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Order</label>
                @Html.TextBoxFor(m => m.Order, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(m => m.Description, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>CategoryId</label>
                @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories,"Id", "Name"))
            </div>
            <div class="panel-footer">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "ProductTypes", new { @class = "btn btn-primary" })
            </div>
        </div>
    }
</div>
