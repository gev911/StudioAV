@model StudioAV.WebUI.Areas.Admin.Models.SpecialOfferListViewModel

@{
    ViewBag.Title = "SpecialOffers";
}

<h2>SpecialOffers</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Special Offers</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">Id</th>
                <th>Name</th>
                <th class="text-right">Date Created</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model.SpecialOffers)
            {
                <tr>
                    <td class="text-center">@item.Id</td>
                    <td>@item.Name</td>
                    <td class="text-right">@item.DateCreated</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Archive", "SpecialOffer"))
                        {
                            @Html.Hidden("Id", item.Id)
                            <input type="submit" class="btn btn-danger btn-xs" value="Archive"/>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add new SpecialOffer", "Create", null, new { @class="btn btn-default"})
    </div>
</div>