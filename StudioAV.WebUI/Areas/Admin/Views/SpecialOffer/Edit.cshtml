@model StudioAV.WebUI.Areas.Admin.Models.SpecialOfferViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3> Edit @Model.Name</h3>
    </div>
    @using (Html.BeginForm("Edit", "SpecialOffer", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="panel-body">
            <div class="form-group">
                <label>Id</label>
                @Html.TextBoxFor(m => m.Id, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Description</label>
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            </div>
            
            <div class="form-group">
                <div style="position: relative">
                    <label>Image</label>
                    <a class="btn" href="javascript:;">
                        Choose file...
                        <input type="file" name="Image" size="40"
                               style="position:absolute;z-index:2;top:0; left:0;filter: alpha(opacity=0);
                               opacity:0; background-color:transparent;color:transparent;"
                               onchange='$("#upload-file-info").html($(this).val());' />
                    </a>
                    <span class="label label-info" id="upload-file-info"></span>
                </div>
                @if (Model.ImageData == null)
                {
                    <div class="form-control-static">No Image</div>
                }
                else
                {
                    <img class="img-thumbnail" width="150" height="150"
                         src="@Url.Action("GetImage", "SpecialOffer", new { Model.Id })" />
                }
            </div>

        </div>

        <div class="panel-footer">
            <input type="submit" value="Save" class="btn btn-primary"/>
            @Html.ActionLink("Cancel", "SpecialOffers", new {@class="btn btn-default"})
        </div>
    }
</div>
